# Torres Hotel Management System - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_USER=your_database_username
DB_PASS=your_database_password
DB_NAME=your_database_name

# Application Settings
APP_NAME="Torres Hotel Management System"
APP_THEME_COLOR="#D4AF37"
APP_ENV=production
APP_DEBUG=false

# Security Settings
SESSION_LIFETIME=3600
SESSION_SECURE=true
SESSION_HTTPONLY=true

# Email Configuration (if needed for notifications)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourhotel.com
MAIL_FROM_NAME="Torres Hotel"

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=uploads/

# Logging
LOG_LEVEL=error
LOG_PATH=logs/

# Backup Settings
BACKUP_PATH=backups/
BACKUP_RETENTION_DAYS=30

# API Settings (if using external APIs)
API_TIMEOUT=30
API_RATE_LIMIT=100

# Cache Settings
CACHE_ENABLED=true
CACHE_LIFETIME=3600

# Development Settings (set to false in production)
DISPLAY_ERRORS=false
ERROR_REPORTING=E_ALL

# Timezone
TIMEZONE=UTC